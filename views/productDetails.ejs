<%-include ("./common/header.ejs") %>

<div class="card product-card-details mx-auto">
  <img src="<%=product.imageUrl%>" class="card-img-top p-3" alt="<%=product.title%>">
  <h5 class="text-center my-1"><%=product.title%></h5>
  <h6 class="text-center my-1"><%=product.price%>$</h6>
  <div class="card-body">
    <p class="card-text"><%=product.description%></p>
  </div>
</div>

<div class="d-flex justify-content-center mt-4">
  <form action="/delete-product/<%=product._id%>" method="GET">
    <button class="btn btn-lg btn-danger m-2">Delete</button>
  </form>
  <form action="/edit-product/<%=product._id%>" method="GET">
    <button class="btn btn-lg btn-primary m-2">Edit</button>
  </form>
</div>

<%-include ("./common/footer.ejs") %>