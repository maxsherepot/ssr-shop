<%-include ("./common/header.ejs") %>

<div class="products-container">
  <% if (products.length) { %>
  <% products.forEach(product => { %>
  <div class="card product-card">
    <img src="<%=product.imageUrl%>" class="card-img-top p-3" alt="<%=product.title%>">
    <h5 class="text-center my-1"><%=product.title%></h5>
    <h6 class="text-center my-1"><%=product.price%>$</h6>
    <div class="card-body">
      <p class="card-text"><%=product.description%></p>
    </div>
  </div>
  <% }) %>


  <% } else { %>
  <span class="text-center">No products yet</span>
  <% } %>
</div>

<%-include ("./common/footer.ejs") %>